%% Aprroximate pi
n = 1000:200:10^5;
pi_hat = nan(length(n),1);
for i=1:length(n)
    rng(1234); s = rng; X = rand(n(i),1);
    rng(2345); s = rng; Y = rand(n(i),1);
    pi_hat(i) = 4*sum(X.^2+Y.^2 <= 1)/n(i);
    %pi_est(i) = 4*sum(rand(n(i)).^2+rand(n(i)).^2 <= 1,'All')/n(i)^2;
end
hold all
plot(n,pi_hat,'b',n,repmat(pi,,'r')